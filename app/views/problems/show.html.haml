- model_class = Problem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @problem.name
%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @problem.start_time
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @problem.end_time

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), problems_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_problem_path(@problem), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), problem_path(@problem), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
