= form_for @problem, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :start_time, :class => 'control-label'
    .controls
      = f.text_field :start_time, :class => 'text_field'
  .control-group
    = f.label :end_time, :class => 'control-label'
    .controls
      = f.text_field :end_time, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), problems_path, :class => 'btn'
